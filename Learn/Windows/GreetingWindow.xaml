<Window x:Class="Learn.Windows.GreetingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Learn.Windows"
        mc:Ignorable="d"
        Title="GreetingWindow" Height="450" Width="800">
    <Grid Margin="5">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Добро пожаловать" FontSize="26"/>
            <Button Content="Продолжить как гость" Margin="0 20 0 0" FontSize="16" x:Name="continueAsGuest" Click="continueAsGuest_Click"/>
            <Button Content="Я администратор" Margin="0 10 0 0" FontSize="16" x:Name="continueAsAdmin" Click="continueAsAdmin_Click"/>
        </StackPanel>
    </Grid>
</Window>
